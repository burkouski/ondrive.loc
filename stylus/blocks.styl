@import '/mixins/mixins'
@import '/mixins/sprite'

/*main menu*/
.latest-posts
  margin 0 0 20px 0
.masonry
  clearfix()
  position relative
  min-height 300px

  /*блок post-preview*/
.post-preview
  float left
  width 275px
  background #f6ffff

.post-preview_big
  width  273px

.post-preview__figure
  padding 10px

.post-preview__content
  margin 20px 10px

.post-preview__title
.post-preview__link
  position relative
  display block
  font-size 20px
  text-decoration none
  &:hover
    .post-preview__hover
      opacity 1

.post-preview__title
  margin 0 0 10px 0

.post-preview__meta
  clearfix()
  margin 0 0 10px 0
  font-size 13px

.post-preview__hover
  position absolute
  top 0
  left 0
  opacity 0
  width 100%
  height 100%
  background url("../img/bg/transparent-black-bg.png")
  color #C2C2C2
  font-size 40px
  text-align center
  transition all 0.5s linear

.post-preview__icon
  position: absolute;
  top 0
  bottom 0
  left 0
  right 0
  width 50%
  height 30%
  margin auto

/*блок post*/
.post__img-wrap
  width 100%
.post__meta
  margin 0 0 20px 0
.meta__comments
.meta__date
  float right
.meta__comments
  color #000000
  text-decoration none
  &:hover
  &:active
    color #ef4135
    text-decoration none
/* block .form*/
.form__item
  margin 5px 0 0 0
  &:first-child
    margin 0
.form__itext
  display block
  width 100%
  height 25px
  padding 6px 12px
  font-size 12px
  line-height: 1.42857143
  color: #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0,0,0,.075)
  transition border-color ease-in-out .15s,box-shadow ease-in-out .15s

.form__ilogin
.form__restore-link
  border none
  background none
  color #252424

  font-size 12px
  &:hover
    color #ef4135
    text-decoration underline

    /*block .map*/
.map
  margin 0 0 20px 0
.map__wrap
  border 1px solid #ffb400
.map__container
  display block
  width 100%
  height 500px

