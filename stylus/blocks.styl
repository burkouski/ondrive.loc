@import '/mixins/mixins'
@import '/mixins/sprite'
.site-title
  margin 0 0 0 -20px
  color #6F6F6F
  font-family 'Roboto Condensed'
  font-style italic
/*main menu*/
.latest-posts
  margin 0 0 20px 0
.latest-post__heading
  clearfix()
  margin-bottom 50px
.masonry
  clearfix()
  position relative
  min-height 300px

  /*блок post-preview*/
.post-preview
  position relative
  border 1px solid #ffffff
.post-preview--full
  margin-bottom 30px
.post-preview--1x1
  height 150px
  padding 10px
.post-preview--1x2
  float left
  width 50%
  height 150px
  padding 10px
.post-preview--2x2
  height 300px
.post-preview__bg
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background no-repeat 50% 50%
  background-size cover
.post-preview__hover-bg
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  opacity 0
  background-image url("../img/bg/dark-hover-bg.png")
  transition opacity 0.2s ease-in-out
  &:hover
    opacity 1
    transition opacity 0.2s ease-in-out
.post-preview__link
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 2
  display block
  transition: background-image 0.2s ease-in-out;
.post-preview__link--static
  position static
.post-preview__text
  padding 10px
  text-align justify
.post-preview__title
  position absolute
  bottom 0
  z-index 2
  margin 0
  width 100%
  padding 10px
  background rgba(0, 0, 0, 0.6)
  color #ffffff
  font-size 17px
.post-preview__title--big
  font-size 24px
.post-preview__title--static
  position static
  padding 10px
  background none
  color #000000
  font-size 24px
.post-preview__category
  position absolute
  top 10px
  left 10px
  z-index 2
  display block
  padding 4px 10px
  border-radius 1px
  background red
  color white
  font-size 9px
  font-weight bold
  line-height 10px
  text-transform uppercase
  text-decoration none
  &:hover
    background green
    color white
    text-decoration none
.post-preview__comments
  position absolute
  top 10px
  right 10px
  z-index 2
  display block
  padding 4px 10px
  background rgba(0,0,0,0.4)
  color white
  font-size 12px
  font-weight bold
  line-height 13px
  &:hover
    background rgba(59, 199, 82, 0.4)
    color white
    text-decoration none
.post-preview__img-wrap
  position relative
  height 350px
.post-preview__meta
  clearfix()
  padding 5px 10px
  font-size 13px
  font-style italic
.post p
  padding 5px 20px
.post__title
  padding 0 20px
.post__img-wrap
  position relative
.post__category
  position absolute
  top 10px
  left 10px
  display block
  padding 4px 10px
  border-radius 1px
  background red
  color white
  font-size 9px
  font-weight bold
  line-height 10px
  text-transform uppercase
  text-decoration none
  &:hover
    background green
    color white
    text-decoration none
.post__pub-date
  position absolute
  top 10px
  right 10px
  display block
  padding 4px 10px
  background rgba(0,0,0,0.4)
  color white
  font-size 12px
  font-weight bold
  line-height 13px
.post__video
  height 400px
.meta__date
  float right
/* block .wform*/
.wform
  padding: 20px
  background #fff;
  border: 1px solid #e8e8e8
  border-radius 0
.wform__title
  margin 0
  padding 5px 0 15px 0
  border-bottom 1px solid #929497
  color #252a2f
  font-size 24px
.wform__sub-title
  font-size 18px
  margin 0 0 15px 0
  padding 0 15px
.wform__form-wrap
  padding 20px 0 0
.wform__sub-wrap
  margin 25px 0 0 0
  &:first-child
    margin 0
.wform__label
  margin-bottom 0
  padding-top 7px
  padding-bottom 7px
  color rgb(139, 139, 139)
  font-weight 600
.wform__label--right
  text-align right
.wform__group
  clearfix()
  margin 0 0 15px 0

.wform__control
  display: block
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc;
  border-radius 4px;
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  &:focus
    border-color #66afe9
    outline 0
    box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6)
  &[disabled]
  &[readonly]
    cursor not-allowed
    background-color #eee
    opacity 1
.wform__control--inline
  display inline-block
  width auto
.wform__control--textarea
  height auto
.wform__panel
  margin 20px 0 0 0
  padding 20px
  background #fff
  border 1px solid #e8e8e8
.wform__error
  margin 7px 0 0 0
  padding 7px
  font-size 12px
.wform__checkbox
  position relative
  top 3px
  width 15px
  height 15px
  margin 0 5px 0 0!important
.wform__inside
  ul
    columns: 3
    margin 0
    padding 0
    list-style none
  li
    position relative
    margin 0 0 10px 0
    padding 0 0 0 20px
  .wform__checkbox
    position absolute
    top 3px
    left 0
    margin 0 0 0 -20px
  label
    font-weight normal
.map
  margin 0 0 20px 0
.map__wrap
  border 1px solid #ffb400
.map__container
  display block
  width 100%
  height 500px
.map__container--single
  height 200px


.filter__title
.filter__options
  position relative
  display block
  padding 10px 20px 10px 15px
  margin-bottom -1px
  background-color #fff
  border 1px solid #ddd
  transition: 0.3s linear all;
.filter__title
  &:hover
  &.active
    background #ef4135
    border 1px solid #ef4135
    color white
  .fa
    position absolute
    top 15px
    right 10px
.filter__options
  display block
  transition all 1s ease-out 0.5s

.filter__option-label
.filter__option
  cursor pointer

.phone
  position relative
  display inline-block
  padding 0 0 0 20px
  font-weight bold
.phone__icon
  position absolute
  top 3px
  left 0

.workday__icon
  display inline-block
  vertical-align top
  width 20px
  min-width 20px!important
  height 20px
  margin 0 5px 0 0
  color white!important
  font-size 12px
  text-align center
  text-transform lowercase
  line-height 20px
.workday__icon--blue
  background  darkblue
.workday__icon--red
  background  #ef4135

.work
  position relative
.work__type
  display inline-block
  vertical-align top
  width 24%
  margin 0 0 20px 0
  padding 0 10px
  vertical-align top
.work__list
  margin 0
  padding 0
  list-style none

.w-video__item
  margin 0 0 20px 0
.w-video__title
  margin 0
  padding 5px
  background #000000
  font-size 16px
.w-video__link
  color #ffffff
  text-decoration none

.product-preview__link
  display block
  margin-bottom 20px
  padding 15px 15px 10px
  background #fff
  border 1px solid #e8e8e8
  &:hover
    box-shadow 0 0 10px 1px #D0D0D0
    background #F5F5F5;
.product-preview__title
  color #252a2f
  font-size 16px
  text-transform uppercase
.product-preview__desc
  padding 5px 20px 5px 0
  color #8b8b8b
  font-size 12px
  line-height 18px
  text-align justify
.product-preview__address
  padding 10px 0
  color #2f353b
  font-size 14px
  text-transform uppercase

.w-archive__item
  margin-bottom 20px

.service
  clearfix()
  padding-top 10px
  font-family 'Roboto Condensed'
.service__panel
  padding 20px
  background #fff
  border 1px solid #e8e8e8
  border-radius 0
.service__item
  margin-bottom 20px
.service__title
  margin-top 0
  font-size 24px
  text-transform uppercase
.service__title--small
  font-size 18px
.service__list
  color #808080
  text-transform uppercase
.service__list-item
  margin 5px 0 0 0
  &:first-child
    margin 0
.service__param-name
  min-width 150px
  display inline-block
  color #2f353b
.service__workday-icon
  display inline-block
  vertical-align top
  width 20px
  min-width 20px!important
  height 20px
  margin 0 5px 0 0
  color white!important
  font-size 12px
  text-align center
  text-transform lowercase
  line-height 20px

.service__workday-icon--blue
  background  darkblue
.service__workday-icon--red
  background  #ef4135
.service__work-item
  display inline-block
  padding 0 10px 10px 0
  font-weight bold
.service__desc
  font-size 16px




.service-table__img
  width 300px
.service-table
  font-size 16px
  td
    vertical-align middle!important
.service-table__icon
  font-size 24px
