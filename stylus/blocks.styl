@import '/mixins/mixins'
@import '/mixins/sprite'

/*main menu*/
.latest-posts
  margin 0 0 20px 0

.masonry
  clearfix()
  position relative
  min-height 300px

  /*блок post-preview*/
.post-preview
  vertical-align top
  margin-bottom 10px
  box-shadow: 0 0 1px rgba(0,0,0,0.5);

.post-preview__figure
  position relative

.post-preview__content
  margin 0px 10px
.post-preview__content--inline
  position absolute
  bottom 0
  left 0
  width 100%
  margin 0
  padding 10px
  background rgba(0,0,0, 0.5)
  color white
  a
    color white
    &:hover
      color #ef4135
.post-preview__title
.post-preview__link
  position relative
  display block
  font-size 20px
  text-decoration none
  &:hover
    .post-preview__hover
      opacity 1

.post-preview__title
  margin 0 0 3px 0

.post-preview__meta
  clearfix()
  margin 0 0 5px 0
  font-size 13px

.post-preview__hover
  position absolute
  top 0
  left 0
  opacity 0
  width 100%
  height 100%
  background url("../img/bg/transparent-black-bg.png")
  color #C2C2C2
  font-size 40px
  text-align center
  transition all 0.5s linear

.post-preview__icon
  position: absolute;
  top 0
  bottom 0
  left 0
  right 0
  width 50%
  height 30%
  margin auto
.post-preview__img
  width 100%
/*блок post*/
.post__img-wrap
  width 100%
.post__meta
  margin 0 0 20px 0
.meta__comments
.meta__date
  float right
.meta__comments
  color #000000
  text-decoration none
  &:hover
  &:active
    color #ef4135
    text-decoration none

/* block .wform*/
.wform
  padding: 20px
  background #fff;
  border: 1px solid #e8e8e8
  border-radius 0
.wform__title
  margin 0
  padding 5px 0 15px 0
  border-bottom 1px solid #929497
  color #252a2f
  font-size 24px
.wform__form-wrap
  padding 20px 0 0
.wform__label
  margin-bottom 0
  padding-top 7px
  color rgb(139, 139, 139)
  font-weight 600
  text-align right
.wform__group
  clearfix()
  margin 0 -15px 15px -15px

.wform__input
  display: block
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc;
  border-radius 4px;
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

.wform__input--textarea
  height auto

.map
  margin 0 0 20px 0
.map__wrap
  border 1px solid #ffb400
.map__container
  display block
  width 100%
  height 500px
.map__container--single
  height 200px


.filter__title
.filter__options
  position relative
  display block
  padding 10px 20px 10px 15px
  margin-bottom -1px
  background-color #fff
  border 1px solid #ddd
  transition: 0.3s linear all;
.filter__title
  &:hover
  &.active
    background #ef4135
    border 1px solid #ef4135
    color white
  .fa
    position absolute
    top 15px
    right 10px
.filter__options
  display block
  transition all 1s ease-out 0.5s

.filter__option-label
.filter__option
  cursor pointer

.phone
  position relative
  display inline-block
  padding 0 0 0 20px
.phone__icon
  position absolute
  top 3px
  left 0

.workday__icon
  display inline-block
  vertical-align top
  width 20px
  min-width 20px!important
  height 20px
  margin 0 5px 0 0
  color white!important
  font-size 12px
  text-align center
  text-transform lowercase
  line-height 20px
.workday__icon--blue
  background  darkblue
.workday__icon--red
  background  #ef4135

.work
  position relative
.work__type
  display inline-block
  vertical-align top
  width 24%
  margin 0 0 20px 0
  padding 0 10px
  vertical-align top
.work__list
  margin 0
  padding 0
  list-style none
